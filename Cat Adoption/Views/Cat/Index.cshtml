@model IEnumerable<Cat>

<style>
    .card-img-top {
        width: 100%;
        height: 200px; /* Set a fixed height */
        object-fit: cover; /* This will crop the image to fill the space */
    }

    .card-body {
        display: flex;
        flex-direction: column;
    }

    .card {
        height: 100%; /* Make all cards the same height */
        padding-bottom: 15px;
        padding: 50px;
    }

    
</style>

<h1>Cat Index page @Model.Count()</h1>
<div class="row">
    @{int count = 0;}

    @foreach (var Cat in Model){
        
        @if (count % 3 == 0 && count != 0)
        {
            @:</div><div class="row">

        }
        count++;

        <div class="col-md-4 mb-4">
            <div class="card" style="width: 18rem;">
                <img src=@Cat.url class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@Cat.Name</h5>
                    <p class="card-text">This cat's breed is: @Cat.Breed</p>
                    <p class="card-text">Price: $@Cat.price</p>
                    <a asp-route-id=@Cat.id asp-controller="Cat" asp-action="SingleCat" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
    }

</div>